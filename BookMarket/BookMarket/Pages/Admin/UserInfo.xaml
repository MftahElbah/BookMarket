<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookMarket.Pages.Admin.People.UserInfo"
             BackgroundColor="#ECEAEC"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:svg="clr-namespace:Xamarin.Forms.Svg;assembly=SvgImageSource"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding un , StringFormat='Username: '}"></Label>
            <Label Text="{Binding fn,StringFormat='Fullname: '}"></Label>
            <Label Text="{Binding em,StringFormat='Email: '}"></Label>
            <Label Text="" x:Name="gen"></Label>
            <Label Text="{Binding a,StringFormat='Age:'}"></Label>
            <Label Text="" x:Name="type"></Label>
            <FlexLayout>
                <buttons:SfButton Text="Make the account as an Admin"/>
                <buttons:SfButton Text="Delete the Account"/>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>